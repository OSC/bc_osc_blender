<%-
  args = [ "--nodes", "1"]

  extra = if gpu.to_s == 'whole'
            ['--gpus-per-node', '1', '--ntasks-per-node', '8' ]
          else
            ['--partition', 'quick', '--ntasks-per-node', '1' ]
          end

  args = args + extra
-%>
---
batch_connect:
  template: vnc

script:
  native:
    <%- args.each do |arg| -%>
    - "<%= arg %>"
    <%- end -%>